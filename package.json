{
	"name": "omnivox-datadisplay",
	"version": "0.1.0-alpha.1",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "run build:page && run build && companion-module-build --prerelease",
		"copy-files": "copyfiles -u 1 static/** dist/static",
		"build": "rimraf dist && run build:main && run build:page",
		"build:main": "tsc -p tsconfig.build.json",
		"build:page": "vite build ./page",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint --no-warn-ignored",
		"lint": "run lint:raw ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alex-Arc/companion-module-omnivox-datadisplay.git"
	},
	"engines": {
		"node": "^22.14",
		"yarn": "^4"
	},
	"dependencies": {
		"@companion-module/base": "~1.11.3",
		"jsoncrush": "^1.1.8",
		"nanoid": "^5.1.5",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-rnd": "^10.5.2",
		"socket.io-client": "^4.8.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.3.0",
		"@types/copyfiles": "^2",
		"@types/node": "^22.14.1",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^4.7.0",
		"copyfiles": "^2.4.1",
		"eslint": "^9.24.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"sass": "^1.89.2",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.30.1",
		"vite": "^7.0.6"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.9.1"
}
